<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CookIT" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="Theme.CustomSplashScreenTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.CookIT</item>
    </style>

    <style name="Theme.CookIT.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>